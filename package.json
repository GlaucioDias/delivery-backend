{
  "name": "backend",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "start": "node src",
    "delete": "rm -rf dist",
    "postinstall": "tsc",
    "watch-node": "nodemon src",
    "watch-ts": "tsc -w",
    "test": "export NODE_ENV=test && jest",
    "test:watch": "yarn test -- --watch",
    "dev": "nodemon src",
    "prod": "cross-env NODE_ENV=prod tsc && node src",
    "deploy:git": "git add . &&  git commit -m deploy && git push origin master",
    "deploy:heroku": "git add . &&  git commit -m deploy && git push heroku master"
  },
  "engines": {
    "node": "14.16.0"
  },
  "dependencies": {
    "@sucrase/jest-plugin": "^2.0.0",
    "@types/jest": "^26.0.7",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "mongoose": "^5.12.2",
    "supertest": "^6.1.3"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.5",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/express-validator": "^3.0.0",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/mongoose": "^5.10.4",
    "@types/node": "^14.14.35",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.6",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".(js|jsx|ts|tsx)": "@sucrase/jest-plugin"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|js)",
      "**/__tests__/*/*.+(ts|js)"
    ],
    "coverageReporters": [
      "text",
      "cobertura",
      "lcov"
    ]
  }
}
