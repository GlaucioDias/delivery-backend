{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "ES2015"
    ],
    "allowJs": true,
    "sourceMap": true,  
    "rootDir": "src",
    "strict": true ,
    "noImplicitAny": true, 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "__tests__/**/*.spec.ts"]
}
